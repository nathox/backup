<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>
$(function(){
  var cnt=0;
  $('#add').on('click',function(){
    $('#sample_table').append(
      $('<tr>').append(
        $('<td>').append($('<input>').attr({type:"checkbox",name:"checkbox"}).val(++cnt)).append(cnt),
        $('<td>').text('商品2'),
        $('<td>').text('商品3'),
        $('<td>').text('商品4'),
        $('<td>').text('商品5'),
        $('<td>').text('商品6'),
        $('<td>').text('商品7')
        )
      );
  });
  $('#del').on("click", function() {
    $('#sample_table tr').has('input[type=checkbox]:checked').remove();
  });
});

</script>

<button type="button" id="add" name="sampleadd" class="btn  margin-bottom">追加</button>
<button type="button" id="del" name="sampledel" class="btn  margin-bottom">削除</button>

<table class="demo" id="demo1">
<thead>
<tr>
<th>1</th>
<th>2</th>
<th>3</th>
<th>4</th>
<th>5</th>
<th>6</th>
<th>7</th>
</thead>
<tbody id="sample_table">





</table>

